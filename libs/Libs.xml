<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<!-- LibStub must always be loaded first -->
	<Script file="libs\LibStub\LibStub.lua"/>
	
	<!-- CallbackHandler is needed by many Ace3 libraries -->
	<Script file="libs\CallbackHandler-1.0\CallbackHandler-1.0.lua"/>
	
	<!-- Ace3 Core Libraries (load in dependency order) -->
	<Include file="libs\AceAddon-3.0\AceAddon-3.0.xml"/>
	<Include file="libs\AceDB-3.0\AceDB-3.0.xml"/>
	<Include file="libs\AceDBOptions-3.0\AceDBOptions-3.0.xml"/>
	<Include file="libs\AceGUI-3.0\AceGUI-3.0.xml"/>
	<Include file="libs\AceEvent-3.0\AceEvent-3.0.xml"/>
	<Include file="libs\AceConsole-3.0\AceConsole-3.0.xml"/>
	<Include file="libs\AceConfig-3.0\AceConfig-3.0.xml"/>
	<Include file="libs\AceLocale-3.0\AceLocale-3.0.xml"/>

	<!-- oUF (unit frame library) - must use XML to load in correct order -->
	<Include file="libs\oUF\oUF.xml"/>

    	<!-- LibAnchorRegistry-1.0 (inter-addon frame anchoring system) -->
	<Script file="libs\LibAnchorRegistry-1.0\LibAnchorRegistry-1.0.lua"/>

	<!-- LibEditMode (Edit Mode integration for resource bars) -->
	<Include file="libs\LibEditMode\embed.xml"/>
</Ui>
